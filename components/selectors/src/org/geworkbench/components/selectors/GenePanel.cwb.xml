			<html><head><meta http-equiv=Content-Type content="text/html; charset=windows-1252"></head>
				<body>----</body>
			</html>
		]]></license>

		<online-help
			helpSet="org/geworkbench/components/selectors/help/PanelsHelpSet.hs" />
		<menu-item path="Commands.Sets.Delete Set" mode="onFocus"
			var="Commands.Sets.Delete" />
		<menu-item path="Commands.Sets.Activate Set" mode="onFocus"
			var="Commands.Sets.Activate" />
		<menu-item path="Commands.Sets.Deactivate Set" mode="onFocus"
			var="Commands.Sets.Deactivate" />

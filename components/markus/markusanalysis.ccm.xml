<geaw-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ConfigurationFile Schema.xsd">

	<component  name="MarkUs Analysis"
				class="org.geworkbench.components.markus.MarkUsAnalysis"
				version="1.0"
				author="C2B2"
				authorURL="http://wiki.c2b2.columbia.edu/workbench/index.php/Home"
				toolURL="http://wiki.c2b2.columbia.edu/workbench/index.php/Home"
				tutorialURL="http://wiki.c2b2.columbia.edu/workbench/index.php/Tutorial_-_Mark-Us"
				description="The MarkUs component assists in the assessment
 of the biochemical function for a given protein structure.  The component
 in geWorkbench provides an inteface to the Mark-Us web server at Columbia.
 Mark-Us identifies related protein structures and sequences, detects
 protein cavities, and calculates the surface electrostatic potentials
 and amino acid conservation profile."

				analysis="true"
	 >
		<required-component class="org.geworkbench.components.markus.MarkUsBrowser" />
		<required-component class="org.geworkbench.components.jmol.JmolComponent" />
		<license><![CDATA[
			<html><head><meta http-equiv=Content-Type content="text/html; charset=windows-1252"></head>
				<body>----</body>
			</html>
		]]></license>

	</component>

  <plugin id="MarkUsAnalysis" name="MarkUs Analysis" class="org.geworkbench.components.markus.MarkUsAnalysis" source="markus"/>
  
  	<component-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="Descriptor Schema.xsd">
		<component class="org.geworkbench.components.markus.MarkUsAnalysis">
			<online-help
				helpSet="org/geworkbench/components/markus/help/markusHelpSet.hs" />
		</component>
	</component-descriptor>

</geaw-config>